require_relative "../lib/runfile-exec.rb"

# RunfileExec.pid_dir = './tmp'

name    "Debug Runfile"
summary "Runfile Exec Example Usage"
version "0.1.0"

before_run do |command|
  puts "BEFORE #{command}"
  command
end

after_run do |command|
  puts "AFTER #{command}"
end

action :one do
  run 'pwd'
end

action :runbg do
  run_bg "ls -l", pid: 'hello'
end

action :stop do
  stop_bg 'hello'
end
